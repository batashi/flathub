{
  "id" : "com.gluon.scenebuilder",
  "runtime" : "org.freedesktop.Platform",
  "runtime-version" : "21.08",
  "runtime-commit" : "c7252386179c4c1ecf5d93bdaec6ca82852dddfdae7112b5c3177f7424c4a928",
  "sdk" : "org.freedesktop.Sdk",
  "sdk-commit" : "829d2745d7122e1669f0dabdc8a1906effb7a41b5f30bebbded350089b779b06",
  "command" : "SceneBuilder",
  "modules" : [
    {
      "name" : "cpio",
      "buildsystem" : "autotools",
      "sources" : [
        {
          "url" : "https://ftp.gnu.org/gnu/cpio/cpio-2.12.tar.gz",
          "sha256" : "08a35e92deb3c85d269a0059a27d4140a9667a6369459299d08c17f713a92e73",
          "type" : "archive"
        },
        {
          "path" : "cpio-2.13-mutiple-definition.patch",
          "type" : "patch"
        }
      ]
    },
    {
      "name" : "rpm2cpio",
      "buildsystem" : "simple",
      "sources" : [
        {
          "url" : "https://github.com/ruda/rpm2cpio/archive/2017.tar.gz",
          "sha256" : "d266a4f49e65b5d05956502549ceb1d5671f927375ff71299069e6d92363297a",
          "type" : "archive"
        },
        {
          "path" : "rpm2cpio.patch",
          "type" : "patch"
        }
      ],
      "build-commands" : [
        "install -D rpm2cpio.py /app/bin/rpm2cpio"
      ]
    },
    {
      "name" : "SceneBuilder",
      "buildsystem" : "simple",
      "only-arches" : [
        "x86_64"
      ],
      "sources" : [
        {
          "url" : "https://github.com/gluonhq/scenebuilder/releases/download/18.0.0/SceneBuilder-18.0.0.rpm",
          "sha256" : "79b3f7dde4f1e2e98582a473637c18f168c70803563a14f7be888b176234afe5",
          "type" : "file"
        },
        {
          "path" : "scenebuilder.sh",
          "type" : "file"
        },
        {
          "path" : "com.gluon.scenebuilder.metainfo.xml",
          "type" : "file"
        },
        {
          "path" : "com.gluon.scenebuilder.desktop",
          "type" : "file"
        },
        {
          "path" : "com.gluon.scenebuilder.512.png",
          "type" : "file"
        }
      ],
      "build-commands" : [
        "rpm2cpio SceneBuilder-18.0.0.rpm | cpio -idmv",
        "cp -r ./opt/scenebuilder/ -t /app/lib/",
        "install -Dm644 com.gluon.scenebuilder.metainfo.xml -t /app/share/metainfo/",
        "install -Dm755 scenebuilder.sh /app/bin/SceneBuilder",
        "install -Dm644 com.gluon.scenebuilder.desktop /app/share/applications/com.gluon.scenebuilder.desktop",
        "install -Dm644 com.gluon.scenebuilder.512.png /app/share/icons/hicolor/256x256/apps/com.gluon.scenebuilder.png"
      ]
    }
  ],
  "finish-args" : [
    "--socket=x11",
    "--share=network"
  ]
}